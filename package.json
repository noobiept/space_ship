{
    "name": "space_ship",
    "version": "2.0.0",
    "scripts": {
        "start": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "tsc": "tsc --watch",
        "server": "http-server . -c-1",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/box2d": "0.0.33",
        "@types/createjs": "0.0.29",
        "@types/jquery": "^3.3.34",
        "@types/jqueryui": "^1.12.10",
        "http-server": "^0.12.1",
        "prettier": "^2.0.4",
        "ts-loader": "^6.2.2",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@drk4/utilities": "^3.4.1"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    }
}
