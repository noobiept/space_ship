{
    "name": "space_ship",
    "version": "2.0.0",
    "scripts": {
        "start": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "tsc": "tsc --watch",
        "server": "http-server ./dist/ -c-1 -o /",
        "lint": "eslint . --ext .js,.ts",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/box2d": "0.0.33",
        "@types/createjs": "0.0.29",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.1.1",
        "eslint": "^6.8.0",
        "http-server": "^0.12.3",
        "prettier": "^2.0.5",
        "ts-loader": "^7.0.2",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@drk4/utilities": "^4.0.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    }
}
